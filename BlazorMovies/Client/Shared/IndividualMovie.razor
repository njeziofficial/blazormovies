<p>Title: <b>@Movie.Title</b></p>
<p>Release Date: <b>@Movie.ReleaseDate</b></p>

@if (DisplayButtons)
{
    <div>
        <button class="btn btn-danger" @onclick="@(() => DeleteMovie.InvokeAsync(Movie))">Delete</button>
    </div>

}


@code {
    [Parameter]
    public Movie Movie { get; set; }

    [Parameter]
    public bool DisplayButtons { get; set; }

    [Parameter]
    public EventCallback<Movie> DeleteMovie { get; set; }

    void Delete()
    {
        Console.WriteLine($"Deleting {Movie.Title}");
    }
}
